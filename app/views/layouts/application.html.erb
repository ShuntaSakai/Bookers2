<!DOCTYPE html>
<html lang="ja">
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/361894ee42.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <!-- Header -->
  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand p-3" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-white d-flex' do %>
                <i class="fa-solid fa-house mr-1 mt-1"></i>
                Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-white d-flex' do %>
                  <i class="fa-solid fa-users mr-1 mt-1"></i>
                Users
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-white d-flex' do %>
                <i class="fa-solid fa-book-open mr-1 mt-1"></i>
                Books
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white d-flex' do %>
                  <i class="fa-solid fa-right-from-bracket mr-1 mt-1"></i>
                  Log out
                  <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-white d-flex' do %>
                <i class="fa-solid fa-house mr-1 mt-1"></i>
                Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-white d-flex' do %>
                <i class="fa-solid fa-link mr-1 mt-1"></i>
                About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-white d-flex' do %>
                <i class="fa-solid fa-user-plus mr-1 mt-1"></i>
                Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-white d-flex' do %>
                <i class="fa-solid fa-right-to-bracket mr-1 mt-1"></i>
                Log in
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main content -->
  <main class="container py-4">
    <%= yield %>
  </main>

  <!-- Footer -->
  <footer class="text-center pt-4 pb-4">
    <div class="container text-center">
      <p class="mb-1">Copyright Infratop.inc</p>
    </div>
  </footer>

</body>
</html>
